{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.cjs", "**/*.mjs", "./index.ts"],
  "exclude": ["node_modules", "./dist/**/*"],
  "compileOnSave": true
}
